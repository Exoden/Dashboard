{% trans_default_domain 'FOSUserBundle' %}

<div class="fos_user_user_show">
    <div class="container profile">
        <div class="row">
            <div class="col-md-12">
                <h1>{{ "Profile"|trans({}, 'messages') }}</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-md-3">
                {% include "AppBundle::profile_menu.html.twig" %}
            </div>
            <div class="col-md-6">
                <img src="" alt="profile_image" class="profile-image"/>
                <p>{{ 'profile.show.username'|trans }}: {{ user.username }}</p>
                <p>{{ 'profile.show.email'|trans }}: {{ user.email }}</p>
            </div>
            <div class="col-md-3">
                <div class="menu">
                    <ul>
                        <li>
                            <a href="{{ path('fos_user_profile_edit') }}">{{ "Edit profile"|trans({}, 'messages') }}</a>
                        </li>
                        <li>
                            <a href="{{ path('fos_user_change_password') }}">{{ 'change_password.submit'|trans }}</a>
                        </li>
                        {#<li>#}
                            {#<a href="{{ path('fos_user_resetting_request') }}">{{ 'resetting.request.submit'|trans }}</a>#}
                        {#</li>#}
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
