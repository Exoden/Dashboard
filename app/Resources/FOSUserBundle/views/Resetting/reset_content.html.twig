{% trans_default_domain 'FOSUserBundle' %}

<div class="container">
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <div class="block-form border-menu">
                <h2 class="form-heading">{{ 'resetting.reset.submit'|trans }}</h2>

                <form action="{{ path('fos_user_resetting_reset', {'token': token}) }}" {{ form_enctype(form) }} method="POST" class="form-style">

                    {{ form_widget(form) }}

                    <div>
                        <input type="submit"
                               class="btn btn-lg btn-primary btn-block input-button"
                               id="_submit"
                               name="_submit"
                               value="{{ 'resetting.reset.submit'|trans }}" />
                    </div>
                </form>

            </div>
        </div>
        <div class="col-md-3"></div>
    </div>
</div>