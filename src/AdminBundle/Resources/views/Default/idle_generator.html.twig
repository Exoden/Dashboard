{% extends "AdminBundle:Default:index.html.twig" %}

{% block title %}{{ parent() }}{{ "Idle Generator"|trans }}{% endblock %}

{% block sub_menu %}
    <a href="{{ path('create_resource') }}" class="btn btn-primary">Create Resource</a>
    <a href="{{ path('create_stuff') }}" class="btn btn-primary">Create Stuff</a>
    <a href="{{ path('create_recipe') }}" class="btn btn-primary">Create Recipe</a>
    <a href="#" class="btn btn-primary">Create Food</a>
    <a href="#" class="btn btn-primary">Create Enhancer</a>
{% endblock %}

{% block page %}
    <div class="col-md-12 border-menu">
        <div class="table-responsive">
            <table id="stories-table" class="table">
                <thead>
                    <tr>
                        <th>{{ "Name"|trans }}</th>
                        <th>{{ "Type"|trans }}</th>
                        <th>{{ "Action"|trans }}</th>
                    </tr>
                </thead>
                <tbody>
                {% for item in items %}
                    <tr>
                        <td>
                            <a href="{{ path('edit_item', {'item_id': item.id}) }}">
                                {{ item.name }}
                            </a>
                        </td>
                        <td>
                            {{ item.typeItem.name }}
                        </td>
                        <td style="text-align: right">
                            {% if item.typeItem.name == 'Equipment' %}
                                <a href="{{ path('edit_stuff', {'item_id': item.id}) }}"><span class="fa fa-edit"></span></a>
                                <a href="{{ path('remove_stuff', {'item_id': item.id}) }}"><span class="fa fa-remove"></span></a>
                            {% elseif item.typeItem.name == 'Resource' %}
                                <a href="{{ path('edit_resource', {'item_id': item.id}) }}"><span class="fa fa-edit"></span></a>
                                <a href="{{ path('remove_resource', {'item_id': item.id}) }}"><span class="fa fa-remove"></span></a>
                            {% elseif item.typeItem.name == 'Recipe' %}
                                <a href="{{ path('edit_recipe', {'item_id': item.id}) }}"><span class="fa fa-edit"></span></a>
                                <a href="{{ path('remove_recipe', {'item_id': item.id}) }}"><span class="fa fa-remove"></span></a>
                            {% endif %}
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}