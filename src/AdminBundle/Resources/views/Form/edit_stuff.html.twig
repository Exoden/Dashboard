{% extends "AdminBundle:Default:index.html.twig" %}

{% block title %}{{ parent() }}{{ "Edit Stuff"|trans }}{% endblock %}

{% block page %}
    <div class="col-md-12">

        {{ include('AppBundle::flash_messages.html.twig') }}

        <div class="block-form border-menu">
            <div class="form-heading"><h2>{{ "Edit Stuff"|trans }}</h2></div>

            {{ form_start(form, {'method': 'POST', 'attr': {'class': 'form-style'} }) }}

            <div class="bg-danger">
                {{ form_errors(form) }}
            </div>

            <div class="bg-danger">
                {{ form_errors(form.item.name) }}
            </div>
            {{ form_widget(form.item.name, {'attr': {'class': 'form-control'}}) }}

            <div class="bg-danger">
                {{ form_errors(form.type) }}
            </div>
            {{ form_widget(form.type, {'attr': {'class': 'form-control'}}) }}

            {#{{ dump(form.item.image.vars.data) }}#}
            {% if form.item.image.vars.data.filename is defined %}
                <img src="{{ asset('images/Idle/Equipments/' ~ form.item.image.vars.data.filename) }}" alt="No Image">
            {% endif %}
            <div class="bg-danger">
                {{ form_errors(form.item.image) }}
            </div>
            {{ form_widget(form.item.image, {'attr': {'class': 'form-control'}}) }}

            <div class="bg-danger">
                {{ form_errors(form.characteristics) }}
            </div>
            <h3>Characteristics</h3>
            {% for charac in form.characteristics %}
                <div class="bg-danger">
                    {{ form_errors(charac) }}
                </div>
                {{ form_widget(charac, {'attr': {'class': 'form-control'}}) }}
            {% endfor %}

            {{ form_widget(form.save, {'attr': {'class': 'btn btn-lg btn-primary btn-block input-button'}}) }}
            {{ form_end(form) }}
        </div>
        <a href="{{ path('idle_generator') }}" class="btn btn-primary back-button">< {{ "Back"|trans }}</a>
    </div>
{% endblock %}